<%- include('../mainpage/headerAndNav') %>

  <body>
    <div class="pageTitle navTopMargin">Sighting #<%=id%></div>
    <div class="container mt-3 sightingContainer">
      <div class="row pt-3 pl-3"><b>Species Name:</b></div>
      <div class="row pl-3"><%=species_name%></div>

      <div class="row pt-3 pl-3"><b>Habitat:</b></div>
      <div class="row pl-3"><%=habitat%></div>

      <div class="row pt-3 pl-3"><b>Date:</b></div>
      <div class="row pl-3"><%=date_seen%></div>

      <div class="row pt-3 pl-3"><b>Appearance:</b></div>
      <div class="row pl-3"><%=appearance%></div>
      
      <div class="row pt-3 pl-3"><b>Behaviour:</b></div>
      <div class="row pl-3"><%=behaviour%></div>

      <div class="row pt-3 pl-3"><b>Vocalizations:</b></div>
      <div class="row pl-3"><%=vocalizations%></div>

      <div class="row pt-3 pl-3"><b>Flock Size</b></div>
      <div class="row pl-3"><%=flock_size%></div>

      <div class="row pt-3 pl-3"><b>Username</b></div>
      <div class="row pl-3"><%=username%></div>

  
      <div class="row mt-3 pb-4 d-flex justify-content-center">
        <div class="col-sm-1">
          <a href="/note/<%=id%>/edit" class="btn btn-warning" role="button">
            Edit</a
          >
        </div>
        <div class="col-sm-1">
          <a href="/" class="btn btn-primary" role="button">
            Done</a
          >
        </div>
        <div class="col-sm-1">
          <form action="/note/<%=id%>/delete?_method=DELETE" method="POST">
            <input
              type="submit"
              class="btn btn-danger"
              name="_method"
              value="Delete"
            />
          </form>
      </div>
    </div>
  </body>
  
<%-include('../mainpage/../mainpage/footer') %>
