<%- include('./mainpage/headerAndNav') %>

  <body>
    <div class="pageTitle navTopMargin">Sighting #<%=id%></div>
    <div class="container mt-3 sightingContainer">
      <div class="row pt-3 pl-3"><b>Species Name:</b></div>
      <div class="row pl-3"><%=species_name%></div>

      <div class="row pt-3 pl-3"><b>Habitat:</b></div>
      <div class="row pl-3"><%=habitat%></div>

      <div class="row pt-3 pl-3"><b>Date:</b></div>
      <div class="row pl-3"><%=date_seen%></div>

      <div class="row pt-3 pl-3"><b>Appearance:</b></div>
      <div class="row pl-3"><%=appearance%></div>
      
      <div class="row pt-3 pl-3"><b>Behaviour:</b></div>

      <div class="row pl-3">
      <% behaviours.forEach((behaviour) =>{ %>
        <%=behaviour.name%>
      <% }); %>
      </div>
      

      <div class="row pt-3 pl-3"><b>Vocalizations:</b></div>
      <div class="row pl-3"><%=vocalizations%></div>

      <div class="row pt-3 pl-3"><b>Flock Size</b></div>
      <div class="row pl-3"><%=flock_size%></div>

      <div class="row pt-3 pl-3"><b>Logged by:</b></div>
      <div class="row pl-3"><%=username%></div>
    </div>

    <div class="container">
      <div class='mb-2'>Comments</div>
      <form action="/note/<%=id%>/comment" method="POST">
      <div class="row">
        <div class="col">
          <div class="form-group">
            <textarea class="form-control commentBox" rows="1" id="comment" name="comment" placeholder='Add a public comment'></textarea>
          </div>
        </div>
      </div>

      <div class="form-group pl-3">
          <div class="row">
            <div class="col-xs-1">
                <button class="btn btn-primary btn-sm" type=submit role="button">
                  Submit
                </button>
            </div>
          <div class="col-xs-1">
            <a href="/note/<%=id%>" class="btn btn-outline-secondary btn-sm ml-3" role="button">
                  Cancel</a
                >
            </div>
          </div>
        </div>
       </form>
    </div>
  </div>
<!-- Insert comments -->
  <div class="container">
    <%if (locals.comments) {%>
    <% comments.forEach((comment)=>{ %>
    <div class="row mb-3">
      <div class="col">
        <small><%=comment.username%></small>
        <div> <%=comment.comment%> </div>
      </div>
    </div>
    <% }); %>
    <% } %>
  </div>



  <div class="container">
      <div class="row mt-3 pb-4 d-flex justify-content-center navTopMargin">
        <div class="col-sm-1">
          <a href="/note/<%=id%>/edit" class="btn btn-warning" role="button">
            Edit</a
          >
        </div>
        <div class="col-sm-1">
          <a href="/" class="btn btn-primary" role="button">
            Done</a
          >
        </div>
        <div class="col-sm-1">
          <form action="/note/<%=id%>/delete?_method=DELETE" method="POST">
            <input
              type="submit"
              class="btn btn-danger"
              name="_method"
              value="Delete"
            />
          </form>
      </div>
    </div>
  </div>
  </body>
  
<%-include('./mainpage/footer') %>
