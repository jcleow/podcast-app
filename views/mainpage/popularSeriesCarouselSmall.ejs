<div class='displayAtSmallBreakPoints'>
  <div class="row mt-3 mb-1">
    <div class="col d-flex justify-content-center align-self-center backgroundDisplay">
      <div class='displaySightings'>
        <h1>Popular Podcasts Series</h1>
      </div>
    </div>
  </div>

  <div id="popularSeriesCarouselSmall" class="carousel slide mt-5" data-interval="false" data-ride="carousel">

  <div class="carousel-inner">
  <% for(let i=0; i< series.length; i+=1) { %>    
  <div class="carousel-item carouselDiv
  <% if(i===0){ %>
    active
  <% } %> 
  ">
    <div class="d-flex justify-content-center">
      <div class="card-deck pt-3">
        <div class = "row d-flex flex-row flex-nowrap overflow-auto">              
            <div class = "col">            
              <div class="card cardSize">
                <form class= "artworkDisplay d-flex justify-content-center"      
                  <% if(series[i].artwork_filename) { %>
                  style="background-image:url(<%=series[i].artwork_filename%>)"
                  <% } %>
                  action ='/'> 
                      <img class="card-img-top w-auto">
                    <a href="/series/<%=series[i].id%>" role="button" class="btn btn-primary mx-auto" type="submit">View</a>                  
                </form>
                <div class="card-body">
                  <h5 class="card-title"><%=series[i].name%></h5>
                  <p class="card-text"><%= truncateDescription(series[i].description)%></p>
                </div>
              </div>
            </div>        
          </div> 
        </div>      
      </div> 
    </div> 
  <% } %>                                
  </div> 

    <div>
      <a class="carousel-newControl-prev align-items-start alignPrevRight" href="#popularSeriesCarouselSmall" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-newControl-next align-items-start" href="#popularSeriesCarouselSmall" role="button" data-slide="next">
        <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>