<%- include('headerAndNav') %>
<body class='bg'>  
<!-- First Section--> 

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item carouselDiv active">
      <img class="d-block w-100 carouselPictures" src="carousel/chatwithtraders.jpg" alt="First slide">
    </div>
    <div class="carousel-item carouselDiv">
      <img class="d-block w-100 carouselPictures" src="carousel/thisamericanlife.jpg" alt="Second slide">
    </div>
    <div class="carousel-item carouselDiv">
      <img class="d-block w-100 carouselPictures" src="carousel/fallback.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class= "toCollapseShow" data-toggle="collapse" data-target="#collapseSightingsTable">
  <div class="row">
    <div class="col d-flex justify-content-center align-self-center backgroundDisplay">
      <div class='displaySightings'>
        <span>Main Page<span>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col d-flex justify-content-center align-self-center backgroundDisplay'>
      <span><i class="fa fa-angle-double-down fa-3x"></i></span>
    </div>
  </div>
</div> 

<section>
<div class="card-deck">
<div class = "row d-flex flex-row flex-nowrap overflow-auto">
 <% episodes.forEach((episode)=>{ %>
  <div class = "col-xs-1 col-sm-3 col-md-2  ">
    <div class="card cardSize">
      
      <form class= "artworkDisplay d-flex justify-content-center" 
              
        <% if(episode.episode_artwork) {%>
        style="background-image:url(<%=episode.episode_artwork%>)"
        <% } else { %>
        style="background-image:url(<%=episode.album_artwork%>)"
        <% } %>
        
        action ='/'> 
          <img class="card-img-top w-auto">
          <button class= "mx-auto" type='submit'>Play</button>
          <input type='hidden' name="episode_id" value="<%=episode.podcast_ext_url%>"/>
      </form>
     
      <div class="card-body">
        <h5 class="card-title"><%=episode.name%></h5>
        <p class="card-text text-overflow">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      </div>
    </div>
  </div>
<% }); %>

</div>

</section>


<section>
<div class="container-sm tableDisplay collapse" id="collapseSightingsTable">
  <table class="table table-hover" class="collapse" data-parent="#overallAccordion">
  <thead>
    <tr>
      <th scope="col" class='text-dark'>ID.</th>
      <th scope="col" class='text-dark'>Play</th>
      <th scope="col" class='text-dark'>Episode Name</th>
      <th scope="col" class='text-dark'>Ep. Number</th>
      <th scope="col" class='text-dark'>Description</th>
    </tr>
  </thead>
  <tbody id="accordion">
    <tr class= "accordion-toggle collapsed" data-toggle="collapse" data-target="#collapse1">
      <% episodes.forEach((episode)=>{ %>
      <th scope="row" class='text-dark'><%=episode.id%></th>
      <td><form action ='/'>
        <button type='submit'>Play</button>
        <input type='hidden' name="episode_id" value="<%=episode.podcast_ext_url%>"/>
      </form></td>
      <td><a class="text-dark"><%=episode.name%></a></form> </td>
      <td class='text-dark'><%= episode.episode_number %></td>
      <td class='text-dark'><%= episode.description %> </td>      
    <td class='actionBtns'>
      <div class="row">
        <div class="col-sm-3">
             <a href="/note//edit" class="btn btn-outline-dark" role="button">
          Edit</a
        >
        </div>
       <div class="col-sm-3"> 
        <form action="/note//delete?_method=DELETE" method="POST">
          <input
            type="submit"
            class="btn btn-outline-danger"
            name="_method"
            value="Delete"
          />
        </form>
      </div>
    </td>
    <td class="expand-button"></td>
    </tr>
    <% }); %>
    <tr>
    <td colspan="12">
      <div id="collapse1" class="collapse" data-parent="#accordion">
                <div class="row pt-3 pl-3"><b>Species Name:</b></div>
      <div class="row pl-3"></div>

      <div class="row pt-3 pl-3"><b>Habitat:</b></div>
      <div class="row pl-3"></div>

      <div class="row pt-3 pl-3"><b>Date:</b></div>
      <div class="row pl-3"></div>

      <div class="row pt-3 pl-3"><b>Appearance:</b></div>
      <div class="row pl-3"></div>
      
      <div class="row pt-3 pl-3"><b>Behaviour:</b></div>
      <div class="row pl-3"></div>

      <div class="row pt-3 pl-3"><b>Vocalizations:</b></div>
      <div class="row pl-3"></div>

      <div class="row pt-3 pl-3"><b>Flock Size</b></div>
      <div class="row pl-3"></div>
      </div>
    </td>
    </tr>    
  </tbody>
</table>
  </div>
</section>


<!-- Second Section on Species Viewed-->
<section>
<div class= "toCollapseShow" data-toggle="collapse" data-target="#collapseSpeciesTable">
  <div class="row">
    <div class="col d-flex justify-content-center align-self-center backgroundDisplay">
      <div class='displaySightings2'>
        <span>All Species Recorded</span>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col d-flex justify-content-center align-self-center backgroundDisplay angleArrows'>
      <span><i class="fa fa-angle-double-down fa-3x"></i></span>
    </div>
  </div>
</div> 

<div class="container-sm tableDisplay collapse" id="collapseSpeciesTable">
  <table class="table table-hover tableBackground" class="collapse" data-parent="#overallAccordion">
  <thead>
    <tr>
      <th scope="col" class='text-dark'>ID</th>
      <th scope="col"class='text-dark'>Species Name</th>
      <th scope="col"class='text-dark'>Scientific Name</th>
      <th scope="col"class='text-dark'>Family Name</th>
      <th scope="col"class='text-dark'>Other Information</th>
    </tr>
  </thead>
  <tbody id="accordion2">
    
    <tr class= "accordion-toggle collapsed" data-toggle="collapse" data-target="#collapse1">
      <th scope="row" class='text-dark'></th>
      <td ><a href="/note/" class='text-dark'> </a> </td>
      <td class='text-dark'>  </td>
      <td class='text-dark'> </td>      
    <td class='actionBtns'>
      <div class="row">
        <div class="col-sm-3">
             <a href="/note//edit" class="btn btn-outline-dark" role="button">
          Edit</a
        >
        </div>
       <div class="col-sm-3"> 
        <form action="/note//delete?_method=DELETE" method="POST">
          <input
            type="submit"
            class="btn btn-outline-danger"
            name="_method"
            value="Delete"
          />
        </form>
      </div>
    </td>
    <td class="expand-button"></td>
    </tr>
    <tr>
    <td colspan="12">
      <div id="collapse1" class="collapse" data-parent="#accordion2">
                <div class="row pt-3 pl-3"><b>Species Name:</b></div>
      <div class="row pl-3"> </div>

      <div class="row pt-3 pl-3"><b>Scientific Name</b></div>
      <div class="row pl-3"></div>

      <div class="row pt-3 pl-3"><b>Family Name</b></div>
      <div class="row pl-3"></div>

      <div class="row pt-3 pl-3"><b>Other Information</b></div>
      <div class="row pl-3"></div>
    </td>
    </tr>    

  </tbody>
</table>
  </div>
</section>
<section>
<div class="videoDisplay">
  <p><span class="display"></span></p>
</div>
</section>

</div>
</body>
<div class="fixed-bottom">
  <div class ="container">
    <div class="row">
      <div class="col d-flex justify-content-center">
  <iframe width="50%" height="90%" scrolling="no" frameborder="no" allow="autoplay" src='<%=episodeLinkToPlay%>'></iframe>
 
</div>
