<div class='displayAtSmallBreakPoints'>
  <div class="row mt-3 mb-1">
    <div class="col d-flex justify-content-center align-self-center backgroundDisplay">
      <div class='displaySightings'>
        <h1>Recommended Episodes For You</h1>
      </div>
    </div>
  </div>

  <div id="recommendEpisodesCarouselSmall" class="carousel slide mt-5" data-interval="false" data-ride="carousel">

  <div class="carousel-inner">
  <% for(let i=0;i<episodes.length;i+=1) { %>
  <div class="carousel-item carouselDiv
  <% if(i===0){ %>
    active
  <% } %> 
  ">
    <div class="d-flex justify-content-center">
      <div class="card-deck pt-3">
        <div class = "row d-flex flex-row flex-nowrap overflow-auto">      
            <div class = "col">            
              <div class="card cardSize">
                <form class= "artworkDisplay d-flex justify-content-center"      
                  <% if(episodes[i].episode_artwork) { %>
                  style="background-image:url(<%=episodes[i].episode_artwork%>)"
                  <% } else { %>
                  style="background-image:url(<%=episodes[i].album_artwork%>)"  
                  action ='/'>
                  <% } %> 
                      <img class="card-img-top w-auto">
                  <button class= "rounded-circle" type='submit'><i class='fa fa-play ml-2'></i></button>
                  <input type='hidden' name="episode_id" value="<%=episodes[i].podcast_ext_url%>"/>                                  
                </form>
                <div class="card-body">
                <h5 class="card-title"> <a href="/series/<%=episodes[i].series_id%>/episode/<%=episodes[i].episode_id%>"><%=episodes[i].name%></a> </h5>
                <div class="card-text text-overflow"><%= truncateDescription(episodes[i].episode_description)%></div>                  
                </div>
              </div>
            </div>
          </div> 
        </div>      
      </div> 
    </div>   
  <% } %>                              
  </div> 

    <div>
      <a class="carousel-newControl-prev align-items-start alignPrevRight" href="#recommendEpisodesCarouselSmall" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-newControl-next align-items-start" href="#recommendEpisodesCarouselSmall" role="button" data-slide="next">
        <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>