<%- include('../mainpage/headerAndNav') %>
<body class='bg'>  
 <div class="container navTopMargin ">
     <div class="row d-flex justify-content-center pb-3 ">
         <div class="col d-flex justify-content-center">
             <a href="#">My Playlists</a>
        </div>
        <div class="col d-flex justify-content-center">
             <a href="/user/<%=loggedInUserId%>/favouriteEpisodes">All Favourite Episodes</a>
        </div>
        <div class="col d-flex justify-content-center">
             <a href="/user/<%=loggedInUserId%>/favouriteComments">All Favourite Comments</a>
        </div>
        <div class="col d-flex justify-content-center">
             <a href="/user/<%=loggedInUserId%>/friends">My Friends</a>
        </div>
    </div>  
 </div>

<!-- Display All Favourite Episodes -->
<div class="container profilePageDisplay border border-dark">
     <table class="table table-hover" class="collapse" data-parent="#overallAccordion">
  <thead>
    <tr>
      <th scope="col" class='text-dark'>ID.</th>
      <th scope="col" class='text-dark'>Play</th>
      <th scope="col" class='text-dark'>Episode Name</th>
      <th scope="col" class='text-dark'>Ep. Number</th>
      <th scope="col" class='text-dark'>Description</th>
    </tr>
  </thead>
  <tbody id="accordion">
    <tr class= "accordion-toggle collapsed" data-toggle="collapse" data-target="#collapse1">
      <% episodes.forEach((episode)=>{ %>
      <th scope="row" class='text-dark'><%=episode.id%></th>
      <td><form action ='/user/<%=loggedInUserId%>/favouriteEpisodes'>
        <button type='submit'>Play</button>
        <input type='hidden' name="podcast_ext_url" value="<%=episode.podcast_ext_url%>"/>
      </form></td>
      <td><a class="text-dark"><%=episode.name%></a></form> </td>
      <td class='text-dark'><%= episode.episode_number %></td>
      <td class='text-dark'><%= episode.description %> </td>      
    <td class='actionBtns'>
      <div class="row">
        <div class="col-sm-3">
             <a href="/note//edit" class="btn btn-outline-dark" role="button">
          Edit</a
        >
        </div>
       <div class="col-sm-3"> 
        <form action="/note//delete?_method=DELETE" method="POST">
          <input
            type="submit"
            class="btn btn-outline-danger"
            name="_method"
            value="Delete"
          />
        </form>
      </div>
    </td>
    </tr>
    <% }); %>   
  </tbody>
</table>
</div>
</div>
</body>

<div class="spacing"></div>
<span class="iframeDisplay">
    <iframe class ="mt-2 " width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src='<%=episodeLinkToPlay%>'></iframe>
</span>
<%-include('../mainpage/footer') %>
