<%- include('./mainpage/headerAndNav.ejs') %>
<div class="container navTopMargin">
  <div class="row">
    <div class="col-sm-4 h-auto d-flex align-items-stretch bg-info ">
        <div class="card-body">
          <h5 class="card-title"><%= selectedSeries[0].series_name%></h5>
          <p class="card-text"></p>
          <img  class='seriesArtwork'src="/<%=selectedSeries[0].series_artwork%>"/>
      </div>
    </div>
    
    <div class="col-sm-8 bg-warning">
        <div class="card-body">
          <button class="btn bg-transparent text-dark dropdown-toggle" type="button"
          id="dropdownMenuButton" data-toggle="dropdown"><span class="episodeDescription">Description</span></button> 
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">              
                      <a class="dropdown-item btn btn-warning" href='/series/<%=selectedSeries[0].series_id%>/edit' role="button" type='submit'>Edit</a>                     
                    <form class="dropdown-item" action="/series/<%=selectedSeries[0].id%>">
                      <input
                        type="submit"
                        name="_method"
                        class="btn btn-danger"
                        value="Delete"
                      />
                    </form>                    
                </div>        
          <p class="card-text"><%=selectedSeries[0].series_description%></p>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th scope="col" class='text-dark'><div hidden>Logo</div></th>
            <th scope="col" class='text-dark'><div hidden>Name</div></th>
            <th scope="col" class='text-dark'><div hidden>Description</div></th>
            <th scope="col" class='text-dark pr-2'><div hidden>Play</div></th>
            <!-- <th scope="col" class='text-dark'><i class='fa fa-heart'></i><th> -->
          </tr>
        </thead>
        <tbody>
          <% episodes.forEach((ep) =>{ %>
          <tr class=''>            
              <td>
                <form class='epArtworkDisplay' action ='/series/<%=ep.series_id%>'>
                <img class='w-100 h-auto' src="/<%=ep.episode_artwork%>"/>                
                  <button class="rounded-circle" type='submit'><i class='fa fa-play ml-2'></i></button>
                  <input type='hidden' name="episodeLinkToPlay" value="<%=ep.podcast_ext_url%>"/>
              </form>
              </td>
              <td><%=ep.episode_name%></td>
              <td><%=ep.episode_description%></td>
            <td class='align-middle'><i class='fa fa-heart-o'></i></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% if (locals.episodeLinkToPlay) {%>

<%- include('soundcloudPlayer')%>
<% } %>
<%-include('./mainpage/footer') %>
