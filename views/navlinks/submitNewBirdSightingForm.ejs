<%- include('../mainpage/headerAndNav') %>
  <!-- Body-->
  <body>
    <div class="container navTopMargin">
      <div class="row">
        <div class="col d-flex justify-content-center submitSighting">
          Submit a new sighting
        </div>
      </div>
<form action="/note" method="POST">
  <div class="form-group">
    <label for='speciesName'>Species Name<span class="required">*</span></label>
    <input type='text' class="form-control" id='speciesName' name='species_name'>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="habitat">Habitat</label>
      <input type="text" class="form-control" id="habitat" name='habitat' placeholder="E.g Trees">
    </div>
    <div class="form-group col-md-6">
      <label for="date">Date<span class="required">*</span></label>
      <input type="date" class="form-control" id="date" name='date' placeholder="MM/DD/YYYY" required>
    </div>
  </div>
  <div class="form-group">
    <label for="appearance">Appearance</label>
    <input type="textarea" class="form-control" id="appearance" name='appearance' placeholder="Please describe in copious details!">
  </div>
  
  <div class="form-group">
    <div>
      <label for="behaviour">Behaviours</label>
    </div>
    <% behaviours.forEach((behaviour)=>{ %>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="behaviour" name="behaviour" value="<%= behaviour.id %>"/>
        <label class="form-check-label"><%=behaviour.name%></label>
    </div>
      <% }) %>
  </div>
  
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="vocalisations">Vocalizations</label>
      <input type="text" class="form-control" id="vocalizations" name='vocalisations' placeholder ='Use mnemonics to describe birds sounds'>
    </div>
    <div class="form-group col-md-2">
      <label for="flockSize">Flock Size<span class="required">*</span></label>
      <input type="number" class="form-control" id="flockSize" name='number' required>
    </div>
  </div>
  <div class="form-group">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    </div>
  </body>
  
<%-include('../mainpage/footer') %>
