<%- include('./mainpage/headerAndNav') %>
  <!-- Body-->
  <body>
    <div class="container navTopMargin">
      <div class="row">
        <div class="col d-flex justify-content-center submitSighting">
          Edit an Existing Sighting
        </div>
      </div>
<form action="/note/<%=id%>/edit?_method=PUT" method="POST">
  <div class="form-group">
    <label for='speciesName'>Species Name</label>
    <input type='text' class="form-control" id='speciesName' name='species_name' value="<%=species_name%>">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="habitat">Habitat</label>
      <input type="text" class="form-control" id="habitat" name='habitat' value="<%=habitat%>" placeholder="E.g Trees"  >
    </div>
    <div class="form-group col-md-6">
      <label for="date">Date</label>
      <input type="text" class="form-control" id="date" name='date_seen' value="<%=date_seen%>" placeholder="MM/DD/YYYY" >
    </div>
  </div>
  <div class="form-group">
    <label for="appearance">Appearance</label>
    <input type="textarea" class="form-control" id="appearance" name='appearance' value="<%=appearance%>"placeholder="Please describe in copious details!"> 
  </div>
  <div class="form-group">
    <label for="behaviour">Behaviour</label>
    <input type="textarea" class="form-control" id="behaviour" name='behaviour' value="<%=behaviour%>"placeholder="Please describe in copious details!">
    <% behaviours.forEach((behaviour)=>{ %>
      <input type="checkbox" name="behaviourNum" value="<%= behaviour.id %>"/>
      <label><%=behaviour.name%></label>
    <% }) %>
  </div>


  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="vocalisations">Vocalisations</label>
      <input type="text" class="form-control" id="vocalizations" name='vocalizations' value="<%=vocalizations%>"placeholder ='Use mnemonics to describe birds sounds'>
    </div>
    <div class="form-group col-md-2">
      <label for="flockSize">Flock Size</label>
      <input type="number" class="form-control" id="flockSize" name='flock_size' value="<%=flock_size%>">
    </div>
  </div>
  <div class="form-group">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    </div>
  </body>
  
<%-include('./mainpage/footer') %>
